{
    "steps": [
      {
        "name": "python:3.9",
        "entrypoint": "pip",
        "args": ["install", "-t", "/tmp/python-deps", "-r", "requirements.txt"]
      },
      {
        "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
        "entrypoint": "gcloud",
        "args": [
          "run",
          "deploy",
          "datetime-app",
          "--source",
          ".",
          "--region",
          "us-central1",
          "--platform",
          "managed",
          "--allow-unauthenticated",
          "--set-env-vars",
          "TZ=${_TIMEZONE}"
        ]
      }
    ],
    "substitutions": {
      "_TIMEZONE": "America/New_York"
    }
  }